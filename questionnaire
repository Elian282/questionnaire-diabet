      const tousMeca = ["Ajout d'insuline manuel", "AmÃ©liore la sensibilitÃ© Ã  lâ€™insuline", "Augmente lâ€™Ã©limination de sucre dans les urines", "Augmente lâ€™effet des hormones intestinales", "RÃ©duit lâ€™appÃ©tit"];
      tousMeca.forEach(function(m) {
        if (bonnesMeca.includes(m) && reponsesMeca.includes(m)) {
          html += `<div style="color: green;">â˜‘ï¸ ${m} (âœ… correct)</div>`;
        } else if (!bonnesMeca.includes(m) && reponsesMeca.includes(m)) {
          html += `<div style="color: red;">â˜‘ï¸ ${m} (âŒ faux)</div>`;
        } else if (bonnesMeca.includes(m) && !reponsesMeca.includes(m)) {
