      }
    
      html += `<br><b>BÃ©nÃ©fices :</b><br>`;
      const tousBenefices = ["Diminution de la glycÃ©mie", "Perte de poids", "Moins de risques cardiovasculaires"];
      tousBenefices.forEach(function(b) {
        if (bonnesBenefices.includes(b) && reponsesBenefices.includes(b)) {
          html += `<div style="color: green;">â˜‘ï¸ ${b} (âœ… correct)</div>`;
        } else if (!bonnesBenefices.includes(b) && reponsesBenefices.includes(b)) {
          html += `<div style="color: red;">â˜‘ï¸ ${b} (âŒ faux)</div>`;
        } else if (bonnesBenefices.includes(b) && !reponsesBenefices.includes(b)) {
          html += `<div style="color: orange;">â¬œ ${b} (âš ï¸ oubliÃ©)</div>`;
