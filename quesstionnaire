  "glp1": { nom: "Analogue GLP1", effets: ["Naus√©es / Vomissements", "Diarrh√©e"], benefices: ["Diminution de la glyc√©mie", "Perte de poids", "Moins de risques cardiovasculaires"], meca: ["R√©duit l‚Äôapp√©tit", "Augmente l‚Äôeffet des hormones intestinales"] },
  "biguanide": { nom: "Metformine", effets: ["Naus√©es / Vomissements", "Diarrh√©e"], benefices: ["Diminution de la glyc√©mie", "Moins de risques cardiovasculaires"], meca: ["Am√©liore la sensibilit√© √† l‚Äôinsuline"] },
  "sulfamides": { nom: "Sulfamides", effets: ["Hypoglyc√©mie", "Prise de poids"], benefices: ["Diminution de la glyc√©mie"], meca: ["Ajout d'insuline manuel"] },
  "gliptines": { nom: "Gliptines", effets: [], benefices: ["Diminution de la glyc√©mie"], meca: ["Augmente l‚Äôeffet des hormones intestinales"] },
  "glifozines": { nom: "Glifozines", effets: ["Mycoses urinaires", "Infections urinaires"], benefices: ["Diminution de la glyc√©mie", "Perte de poids", "Moins de risques cardiovasculaires"], meca: ["Augmente l‚Äô√©limination de sucre dans les urines"] }
};

function changerPage(num) {
  const pourcentage = Math.min((num - 1) / 6 * 100, 100);
  document.getElementById("progressBar").style.width = pourcentage + "%";
  document.querySelectorAll(".page").forEach(p => p.classList.remove("active"));
  document.getElementById("page" + num).classList.add("active");
  if (num === 3) setTimeout(genererQuestionsTraitements, 100);
  if (num === 4) afficherCorrection();
}

function genererQuestionsTraitements() {
  const conteneur = document.getElementById("questionsParTraitement");
  conteneur.innerHTML = "";
  for (const id in traitements) {
    const chk = document.getElementById("chk_" + id);
    if (chk && chk.checked) {
      const t = traitements[id];
      const div = document.createElement("div");
      div.className = "question";

      let html = `<h3>${t.nom}</h3>`;
      html += `<b>Quels sont selon vous les effets ind√©sirables ?</b><br>`;
      const effets = ["Hypoglyc√©mie", "Prise de poids", "Mycoses urinaires", "Naus√©es / Vomissements", "Diarrh√©e", "Infections urinaires"];
      effets.forEach(function(e) {
        html += `<input type="checkbox" name="${id}_effets" value="${e}"> ${e}<br>`;
      });

      html += `<br><b>Quels sont les b√©n√©fices ?</b><br>`;
      const benefices = ["Diminution de la glyc√©mie", "Perte de poids", "Moins de risques cardiovasculaires"];
      benefices.forEach(function(b) {
        html += `<input type="checkbox" name="${id}_benefices" value="${b}"> ${b}<br>`;
      });

      html += `<br><b>Quels sont les m√©canismes d‚Äôaction ?</b><br>`;
      const meca = ["Ajout d'insuline manuel", "Am√©liore la sensibilit√© √† l‚Äôinsuline", "Augmente l‚Äô√©limination de sucre dans les urines", "Augmente l‚Äôeffet des hormones intestinales", "R√©duit l‚Äôapp√©tit"];
      meca.forEach(function(m) {
        html += `<input type="checkbox" name="${id}_meca" value="${m}"> ${m}<br>`;
      });

      div.innerHTML = html;
      conteneur.appendChild(div);
    }
  }
}

function afficherCorrection() {
  const result = document.getElementById("correctionResult");
  let html = "";
  for (const id in traitements) {
    const checkbox = document.getElementById("chk_" + id);
    if (checkbox && checkbox.checked) {
      const t = traitements[id];
      const reponsesEffets = Array.from(document.querySelectorAll(`input[name='${id}_effets']:checked`)).map(e => e.value);
      const reponsesBenefices = Array.from(document.querySelectorAll(`input[name='${id}_benefices']:checked`)).map(e => e.value);
      const reponsesMeca = Array.from(document.querySelectorAll(`input[name='${id}_meca']:checked`)).map(e => e.value);

      const bonnesEffets = t.effets;
      const bonnesBenefices = t.benefices;
      const bonnesMeca = t.meca;

      html += `<h3 style='margin-top: 1em; color: #1a3e5f;'>ü©∫ ${t.nom}</h3>`;

      html += `<b>Effets ind√©sirables :</b><br>`;
      const toutesEffets = Array.from(new Set([...bonnesEffets, ...reponsesEffets]));
      toutesEffets.forEach(function(e) {
        if (bonnesEffets.includes(e) && reponsesEffets.includes(e)) {
          html += `<div style="color: green;">‚òëÔ∏è ${e} (‚úÖ correct)</div>`;
        } else if (!bonnesEffets.includes(e) && reponsesEffets.includes(e)) {
          html += `<div style="color: red;">‚òëÔ∏è ${e} (‚ùå faux)</div>`;
        } else if (bonnesEffets.includes(e) && !reponsesEffets.includes(e)) {
          html += `<div style="color: orange;">‚¨ú ${e} (‚ö†Ô∏è oubli√©)</div>`;
        }
      });

      
      if (bonnesEffets.includes("Prise de poids")) {
        html += `<div style="font-style: italic; color: #555; margin-top: 5px;">üí° La prise de poids est surtout observ√©e en cas d‚Äôutilisation inadapt√©e ou de surdosage. Bien utilis√©e, elle n‚Äôest pas syst√©matique.</div>`;
      }
    
      html += `<br><b>B√©n√©fices :</b><br>`;
      const tousBenefices = ["Diminution de la glyc√©mie", "Perte de poids", "Moins de risques cardiovasculaires"];
      tousBenefices.forEach(function(b) {
        if (bonnesBenefices.includes(b) && reponsesBenefices.includes(b)) {
          html += `<div style="color: green;">‚òëÔ∏è ${b} (‚úÖ correct)</div>`;
        } else if (!bonnesBenefices.includes(b) && reponsesBenefices.includes(b)) {
          html += `<div style="color: red;">‚òëÔ∏è ${b} (‚ùå faux)</div>`;
        } else if (bonnesBenefices.includes(b) && !reponsesBenefices.includes(b)) {
          html += `<div style="color: orange;">‚¨ú ${b} (‚ö†Ô∏è oubli√©)</div>`;
        }
      });

      html += `<br><b>M√©canismes d‚Äôaction :</b><br>`;
      const tousMeca = ["Ajout d'insuline manuel", "Am√©liore la sensibilit√© √† l‚Äôinsuline", "Augmente l‚Äô√©limination de sucre dans les urines", "Augmente l‚Äôeffet des hormones intestinales", "R√©duit l‚Äôapp√©tit"];
      tousMeca.forEach(function(m) {
        if (bonnesMeca.includes(m) && reponsesMeca.includes(m)) {
          html += `<div style="color: green;">‚òëÔ∏è ${m} (‚úÖ correct)</div>`;
        } else if (!bonnesMeca.includes(m) && reponsesMeca.includes(m)) {
          html += `<div style="color: red;">‚òëÔ∏è ${m} (‚ùå faux)</div>`;
        } else if (bonnesMeca.includes(m) && !reponsesMeca.includes(m)) {
          html += `<div style="color: orange;">‚¨ú ${m} (‚ö†Ô∏è oubli√©)</div>`;
        }
      });

      html += `<br><i style="color: #555;">${
        reponsesEffets.length >= bonnesEffets.length - 1 && reponsesEffets.every(function(r){ return bonnesEffets.includes(r); })
          ? "‚úÖ Vous connaissez bien ce traitement !"
          : "üßê Vous avez encore des points √† revoir sur ce traitement."
      }</i><br><hr style="margin-top: 1em;">`;
    }
  }
  result.innerHTML = html || "<i>Aucun traitement s√©lectionn√©.</i>";
}
